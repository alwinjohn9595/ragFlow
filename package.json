{
  "name": "ragflow-clone",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev:api": "pnpm --filter @ragflow/api dev",
    "dev:worker-ingest": "pnpm --filter @ragflow/worker-ingest dev",
    "lint": "eslint . --ext .ts",
    "format": "prettier --check ."
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "ts-node": "^10.9.2",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  }
}